<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field name="container_styles" type="subform" formsource="/templates/jbs3/forms/container_styles.xml" label="TPL_JBS3_SPACER_CONTAINER"/>

    <field type="spacer" label="TPL_JBS3_SPACER_STYLES"/>
    <field name="font_family" type="list" label="TPL_JBS3_FIELD_FONT_FAMILY">
        <option value=""></option>
        <option value="Arial">Arial</option>
        <option value="OpenSans">OpenSans</option>
    </field>
    <field name="background_color" type="color" format="rgba" default="e7e7e7" label="TPL_JBS3_FIELD_BACKGROUND_COLOR"/>
    <field name="color" type="color" format="rgba" default="777" label="TPL_JBS3_FIELD_COLOR"/>
    <field name="a_color" type="color" format="rgba" default="777" label="TPL_JBS3_FIELD_A_COLOR"/>
    <field name="a_hover_color" type="color" format="rgba" default="777" label="TPL_JBS3_FIELD_A_HOVER_COLOR"/>
    <field name="nav_color" type="color" format="rgba" label="TPL_JBS3_FIELD_NAV_COLOR"/>
    <field name="nav_hover_color" type="color" format="rgba" default="777" label="TPL_JBS3_FIELD_NAV_HOVER_COLOR"/>
    <field name="nav_selected_color" type="color" format="rgba" default="777" label="TPL_JBS3_FIELD_NAV_SEL_COLOR"/>
    <field name="navbtn_color" type="color" format="rgba" label="TPL_JBS3_FIELD_NAVBTN_COLOR"/>
    <field name="navbtn_hover_color" type="color" format="rgba" default="cccccc" label="TPL_JBS3_FIELD_NAVBTN_HOVER_COLOR"/>
    <field name="navbtn_selected_color" type="color" format="rgba" default="cccccc" label="TPL_JBS3_FIELD_NAVBTN_SEL_COLOR"/>
    <field name="border_bottom_color" type="color" format="rgba" default="cccccc" label="TPL_JBS3_FIELD_BORDER_BOTTOM_COLOR"/>
    <field name="fixed" type="radio" label="TPL_JBS3_FIELD_NAVBAR_FIXED">
        <option value="">TPL_JBS3_OFF</option>
        <option value="navbar-fixed">TPL_JBS3_ON</option>
    </field>
    <field name="fixed_spacer" type="radio" label="TPL_JBS3_FIELD_NAVBAR_SPACER" default="0" showon="fixed:navbar-fixed">
        <option value=" ">TPL_JBS3_OFF</option>
        <option value="data-navbar-main-spacer">TPL_JBS3_ON</option>
    </field>
</form>